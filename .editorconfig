# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# 2 space indentation for JavaScript, JSX, TypeScript, and TSX files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# 2 space indentation for JSON and YAML files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# 2 space indentation for CSS, SCSS, and LESS files
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# 2 space indentation for HTML files
[*.html]
indent_style = space
indent_size = 2

# 4 space indentation for Markdown files
[*.md]
indent_style = space
indent_size = 4

# Trim trailing whitespace, except for Markdown files
[*]
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# Max line length
max_line_length = 100

# Denote dependencies in package.json as consistent
[package.json]
indent_style = space
indent_size = 2

# Makefile requires tab indentation
[Makefile]
indent_style = tab